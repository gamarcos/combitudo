<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/constentOffice"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageOffice"
                android:layout_width="match_parent"
                android:layout_height="194dp" />

            <LinearLayout
                android:id="@+id/officeContentInformation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <RatingBar
                    android:layout_gravity="left"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/officeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Lorem ipsum dolor sitammetconse ctecur adipsing"/>

            </LinearLayout>

            <TextView
                android:id="@+id/officeLocale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Local"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/officeAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grayScale2"
                android:text="Avenida, NÃºmero\n Cidade e Estado"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:gravity="right"
                android:id="@+id/newsHomeContentLiked"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_star"
                        android:id="@+id/officeButtonLike"
                        android:layout_margin="8dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                    <TextView
                        android:id="@+id/officeTextLiked"
                        android:layout_width="wrap_content"
                        android:textColor="@color/grayScale2"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Avaliar"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_comment"
                        android:id="@+id/officeButtonComment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"/>

                    <TextView
                        android:id="@+id/officeTextComment"
                        android:textColor="@color/grayScale2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Comentar"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>