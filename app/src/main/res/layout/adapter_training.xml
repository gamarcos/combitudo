<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewTraining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/constentTraining"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbVideoTraining"
                android:layout_width="match_parent"
                android:src="@drawable/ic_home"
                android:layout_height="194dp" />

            <LinearLayout
                android:id="@+id/trainingContentInformation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trainingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Lorem ipsum dolor sitammetconse ctecur adipsing"/>

            </LinearLayout>

            <TextView
                android:id="@+id/trainingDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grayScale2"
                android:text="Lorem ipsum dolor itamet,consecteturadipisicing
elit, sed do eiusmod tempor "
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/trainingPeoplesLiked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grayScale2"
                android:text="X pessoas gostaram dessa notÃ­cia"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:gravity="right"
                android:id="@+id/trainingContentLiked"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_home"
                        android:id="@+id/trainingButtonLike"
                        android:layout_margin="8dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                    <TextView
                        android:id="@+id/newsTextLiked"
                        android:layout_width="wrap_content"
                        android:textColor="@color/grayScale2"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Gostei"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_home"
                        android:id="@+id/trainingButtonComment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"/>

                    <TextView
                        android:id="@+id/trainingTextComment"
                        android:textColor="@color/grayScale2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Comentar"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>