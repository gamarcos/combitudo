<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/constentDiscussion"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/discussionContentInformation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/discussionImage"
                android:layout_width="50dp"
                android:layout_marginEnd="16dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/discussionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Lorem ipsum dolor sitammetconse ctecur adipsing"/>

        </LinearLayout>

        <TextView
            android:id="@+id/discussionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grayScale2"
            android:text="Lorem ipsum dolor itamet,consecteturadipisicing
elit, sed do eiusmod tempor "
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/newsHomePeoplesLiked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grayScale2"
            android:text="X pessoas gostaram dessa notÃ­cia"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:gravity="right"
            android:id="@+id/newsHomeContentLiked"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_like2"
                    android:id="@+id/newsButtonLike"
                    android:layout_margin="8dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/newsTextLiked"
                    android:layout_width="wrap_content"
                    android:textColor="@color/grayScale2"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Gostei"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_comment"
                    android:id="@+id/newsButtonComment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/newsTextComment"
                    android:textColor="@color/grayScale2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Comentar"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>